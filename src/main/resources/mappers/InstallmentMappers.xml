<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.bank.mapper.InstallmentMapper">

	<select id="inslist" resultType="Installment">
		select *
		from installment
	</select>

<!-- 	예상 금리 맥스값 -->
	<select id="maxinstall" resultType="Installment">
		select *
		from installment
		where primerate = (select max(primerate)
					 from installment); 		
	</select>
	
</mapper>